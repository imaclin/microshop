# MicroShop Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# API Configuration
# ===========================================

# Backend API URL (your server that handles Stripe operations)
EXPO_PUBLIC_API_URL=http://localhost:3000

# ===========================================
# Stripe Configuration (Client-side)
# ===========================================

# Stripe Publishable Key (starts with pk_test_ or pk_live_)
# Get this from: https://dashboard.stripe.com/apikeys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# ===========================================
# App Configuration
# ===========================================

# App URL scheme for deep linking (used for Stripe Connect return URLs)
EXPO_PUBLIC_APP_SCHEME=microshop

# Platform fee percentage (e.g., 0.05 = 5%)
EXPO_PUBLIC_PLATFORM_FEE_PERCENT=0.05
